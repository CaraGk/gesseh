{% extends 'GessehCoreBundle::layout.html.twig' %}

{% block titlecontent %}Table d'association de Catégorie de stage / Formulaire d'évaluation{% endblock %}
{% block stylesheets %}{{ parent() }}<link href="{{ asset('bundles/gessehcore/css/admin.css') }}" type="text/css" rel="stylesheet" />{% endblock %}

{% block content %}
  {% if sector_form is not empty %}
    {% form_theme sector_form 'GessehCoreBundle:Form:fields.html.twig' %}
    <div>{{ form_errors(sector_form) }}</div>
    {{ form_start(sector_form) }}
  {% endif %}
  <table>
    <thead>
      <tr>
        <th>Catégorie</th>
        <th>Formulaire</th>
        <th class="actions">Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for sector in sectors %}
        {% include sector_id == sector.id ? 'GessehEvaluationBundle:Admin:sectorEdit.html.twig' : 'GessehEvaluationBundle:Admin:sectorIndex.html.twig' %}
      {% endfor %}
      {% if sector_form is not empty and sector_id is empty %}
        {% include 'GessehEvaluationBundle:Admin:sectorEdit.html.twig' %}
      {% endif %}
    </tbody>
    <tfoot>
      <tr>
        <td>
          <ul>
            <li><a href="{{ path('GEval_ASectorNew') }}" title="Ajouter une nouvelle association Catégorie/Formulaire"><img src="{{ asset('bundles/gessehcore/images/Add.png') }}" alt="Ajouter" /></a></li>
          </ul>
        </td>
      </tr>
    </tfoot>
  </table>
  {% if sector_form is not empty %}{{ form_end(sector_form) }}{% endif %}
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('bundles/gessehcore/js/addSub.js') }}" type="text/javascript"></script>
  <script src="{{ asset('bundles/gessehcore/js/confirm.js') }}" type="text/javascript"></script>
{% endblock %}
