<tr id="student_{{ student.id }}">
  <td>{{ student.surname }}</td>
  <td>{{ student.name }}</td>
  <td>{{ student.user.email }}</td>
  <td>{{ student.phone }}</td>
  <td class="small">{{ student.grade }}</td>
  {% if kparam('simul_active') == true %}
    <td>{{ student.ranking }} / {{ student.graduate }}</td>
  {% endif %}
  <td class="actions">
    <ul>
      <li><a href="{{ path('GUser_SAEditStudent', {'id': student.id, 'page': page}) }}#student_{{ student.id }}" title="Modifier l'étudiant '{{ student }}'">Modifier</a></li>
      <li><a href="{{ path('GUser_SADeleteStudent', {'id': student.id, 'page': page}) }}" title="Supprimer l'étudiant '{{ student }}'">Supprimer</a></li>
      {% if 'ROLE_ADMIN' in student.user.roles %}
        <li><a href="{{ path('GUser_SADemoteStudent', {'id': student.id, 'page': page}) }}" title="Démettre l'étudiant '{{ student }}'">Démettre</a></li>
      {% else %}
        <li><a href="{{ path('GUser_SAPromoteStudent', {'id': student.id, 'page': page}) }}" title="Promouvoir l'étudiant '{{ student }}'">Promouvoir</a></li>
      {% endif %}
    </ul>
  </td>
</tr>

