{% extends 'GessehCoreBundle::layout.html.twig' %}

{% block title %}{{ parent() }} - Étudiants{% endblock %}

{% block titlecontent %}
    Étudiants ({{ students_count }})
    <span><a href="{{ path('GUser_SANew') }}#student_new" title="Ajouter un nouvel étudiant"><img src="{{ asset('bundles/gessehcore/images/Add.png') }}" alt="Ajouter" /></a></span>
{% endblock %}

{% block actionscontent %}
<li class="field"><a href="{{ path('GUser_SAIndex') }}?{{ app.request.querystring }}" title="Retour à la liste des internes"><img src="{{ asset('bundles/gessehcore/images/Button_Back.png') }}" alt="Retour"></a></li>
{% endblock %}

{% block content %}
{{ form(student_form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/gessehcore/js/actions.js') }}" type="text/javascript"></script>
{% endblock %}
