{% extends "GessehInstallBundle:Configurator:layout.html.twig" %}

{% block title %}{{ parent() }} : Messagerie{% endblock %}

{% block content %}
  {% form_theme form "GessehInstallBundle:Configurator:form.html.twig" %}

  <h1>Configure your Mailer</h1>

  {{ form_errors(form) }}
  <form action="{{ path('_configurator_step', {'index': index}) }}" method="POST">
    <div class="form_column">
      {{ form_row(form.transport) }}
      {{ form_row(form.host) }}
      {{ form_row(form.user) }}
      {{ form_row(form.password) }}
      {{ form_row(form.mail) }}
    </div>

    {{ form_rest(form) }}

    <div class="form_footer">
      <p><button type="submit" class="">Next Step</button></p>
      <p>* champs obligatoires</p>
    </div>
  </form>
{% endblock %}
