{% extends "GessehInstallBundle:Configurator:layout.html.twig" %}

{% block title %}{{ parent() }} : Base de donn√©es{% endblock %}

{% block content %}
    {% form_theme form "GessehInstallBundle:Configurator:form.html.twig" %}

    <h1>Configure your Database</h1>

    {{ form_errors(form) }}
    <form action="{{ path('_configurator_step', { 'index': index }) }}" method="POST">
        <div class="symfony-form-column">
            {{ form_row(form.driver) }}
            {{ form_row(form.host) }}
            {{ form_row(form.name) }}
        </div>
        <div class="symfony-form-column">
            {{ form_row(form.user) }}
            {{ form_row(form.password) }}
        </div>

        {{ form_rest(form) }}

        <div class="symfony-form-footer">
            <p><input type="submit" value="Next Step" class="symfony-button-grey" /></p>
            <p>* mandatory fields</p>
        </div>
    </form>
{% endblock %}

{% block menu %}
  {% include "GessehInstallBundle:Configurator:steps.html.twig" with { "index": index, "count": count } %}
{% endblock %}
