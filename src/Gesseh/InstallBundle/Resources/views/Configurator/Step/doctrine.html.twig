{% extends "GessehCoreBundle::layout.html.twig" %}

{% block title %}Gesseh - Base de donn√©es{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('bundles/gessehinstall/webconfigurator/css/configure.css') }}" type="text/css" media="all" />
{% endblock %}

{% block nav %}
  {% include "GessehInstallBundle::Configurator/steps.html.twig" with { "index": index, "count": count } %}
{% endblock %}

{% block content %}
    {% form_theme form "GessehInstallBundle::Configurator/form.html.twig" %}

    <h1>Configure your Database</h1>
    <p>If your website needs a database connection, please configure it here.</p>

    {{ form_errors(form) }}
    <form action="{{ path('_configurator_step', { 'index': index }) }}" method="POST">
        <div class="symfony-form-column">
            {{ form_row(form.driver) }}
            {{ form_row(form.host) }}
            {{ form_row(form.name) }}
        </div>
        <div class="symfony-form-column">
            {{ form_row(form.user) }}
            {{ form_row(form.password) }}
        </div>

        {{ form_rest(form) }}

        <div class="symfony-form-footer">
            <p><input type="submit" value="Next Step" class="symfony-button-grey" /></p>
            <p>* mandatory fields</p>
        </div>
    </form>
{% endblock %}
