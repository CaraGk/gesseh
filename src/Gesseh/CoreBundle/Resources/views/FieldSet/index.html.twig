{% extends 'GessehCoreBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} - Terrains de stage
    {% if limit %}
        ({{ limit.description }})
    {% endif %}
{% endblock %}

{% block titlecontent %}
    Terrains de stage
    {% if limit %}
        ({{ limit.description }})
    {% endif %}
    {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('GCore_FSANewHospital') }}#hospital_new" title="Ajouter un nouvel hôpital" class="add"><img src="{{ asset('bundles/gessehcore/images/Add.png') }}" alt="Ajouter" /></a>
    {% endif %}
{% endblock %}

{% block content %}
    <ul class="entities hospitals">
        {% for hospital in hospitals %}
            <li class="entity hospital">
                <div class="field entity_title hospital_name"><a href="{{ path('GCore_FSIndex', {limit: {type: 'h.id', value: hospital.id, description: hospital.name}}) }}" title="Afficher les terrains de stage de l'hôpital '{{ hospital.name }}'">{{ hospital }}</a></div>
                <ul class="actions">
                    <li class="action show"><a href="{{ path('GCore_FSShowHospital', {id: hospital.id}) }}" title="Afficher les informations de l'hôpital '{{ hospital.name }}'"><img src="{{ asset('bundles/gessehcore/images/Info.png') }}" /></a></li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('GCore_FSAEditHospital', { 'id': hospital.id }) }}#hospital_{{ hospital.id }}" title="Modifier l'hôpital '{{ hospital.name }}'" class="edit"><img src="{{ asset('bundles/gessehcore/images/Pencil_2.png') }}" alt="Modifier" /></a></li>
                        <li><a href="{{ path('GCore_PAPlacementIndex', {'limit': {'type': 'h.id', 'value': hospital.id}}) }}" title="Afficher les stages dans l'hôpital '{{ hospital.name }}'"><img src="{{ asset('bundles/gessehcore/images/Blocknotes.png') }}" alt="Stages" /></a></li>
                        <li><a href="{{ path('GCore_FSADeleteHospital', { 'id': hospital.id }) }}" title="Supprimer l'hôpital '{{ hospital.name }}'" class="confirm delete"><img src="{{ asset('bundles/gessehcore/images/Trash_Delete.png') }}" alt="Supprimer" /></a></li>
                    {% endif %}
                </ul>
                <ul class="subentities departments">
                    {% for department in hospital.departments %}
                        <li class="subentity department">
                            <div class="field subentity_title department_name">{{ department.name }}</div>
                            <div class="field subentity_item department_head">({{ department.head }})</div>
                            <div class="field subentity_item department_sector"><a href="{{ path('GCore_FSIndex', {limit: {type: 's.id', value: department.sector.id, description: department.sector.name}}) }}" title="Afficher les terrains de la catégorie {{ department.sector }}">{{ department.sector }}</a></div>
                            {% if kparam('simul_active') == true and is_granted('ROLE_STUDENT') %}
                                {% if department.cluster is not null %}
                                    <div class="field subentity_item department_cluster"><a href="{{ path('GCore_FSIndex', {limit: {type: 'd.cluster', value: department.cluster, description: department.cluster }}) }}" title="Afficher les terrains du cluster {{ department.cluster }}">{{ department.cluster }}</a></div>
                                {% endif %}
                                {% if department.number > 1 %}
                                    <div class="field subentity_item department_number">({{ department.number }} postes proposés)</div>
                                {% elseif department.number == 1 %}
                                    <div class="field subentity_item department_number warning">(1 poste proposé)</div>
                                {% else %}
                                    <div class="field empty department_number error">(aucun poste proposé)</div>
                                {% endif %}
                            {% endif %}
                            <ul class="actions">
                                <li class="action show"><a href="{{ path('GCore_FSShowDepartment', {id: department.id}) }}" title="Afficher les informations du service '{{ department.name }}'"><img src="{{ asset('bundles/gessehcore/images/Info.png') }}" alt="Afficher" /></a></li>
                                {% if kparam('eval_active') == true and is_granted('ROLE_STUDENT') %}<li class="action stat"><a href="{{ path('GEval_DShow', { 'id': department.id }) }}" title="Afficher les évaluations du service '{{ department.name }}'"><img src="{{ asset('bundles/gessehcore/images/Chart_Bar_Big.png') }}" alt="Évaluations" /></a></li>{% endif %}
                                {% if is_granted('ROLE_ADMIN') %}
                                    <li><a href="{{ path('GCore_PAPlacementIndex', {'limit': {'type': 'd.id', 'value': department.id}}) }}" title="Afficher les stages associés au service '{{ department.name }}'"><img src="{{ asset('bundles/gessehcore/images/Blocknotes.png') }}" alt="Stages" /></a></li>
                                    <li><a href="{{ path('GCore_FSADeleteDepartment', {'id': department.id}) }}" title="Supprimer le service '{{ department.name }}'" class="confirm delete"><img src="{{ asset('bundles/gessehcore/images/Trash_Delete.png') }}" alt="Supprimer" /></a></li>
                                {% endif %}
                            </ul>
                        </li>
                    {% else %}
                        <li class="noentity department">Aucun service enregistré.</li>
                    {% endfor %}
                </ul>
            </li>
        {% else %}
            <li class="noentity hospital">Aucun hôpital enregistré</li>
        {% endfor %}
    </ul>
{% endblock %}
