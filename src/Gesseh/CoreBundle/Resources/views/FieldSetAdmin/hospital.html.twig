{% extends 'GessehCoreBundle::layout.html.twig' %}

{% block titlecontent %}Hôpitaux et services{% endblock %}
{% block stylesheets %}{{ parent() }}<link href="{{ asset('bundles/gessehcore/css/admin.css') }}" type="text/css" rel="stylesheet" />{% endblock %}
{% block actionscontent %}{% include 'GessehCoreBundle:FieldSetAdmin:subMenu.html.twig' %}{% endblock %}

{% block content %}
    {% if hospital_form is not empty %}
        <div>{{ form_errors(hospital_form) }}</div>
        {{ form_start(hospital_form) }}
    {% endif %}
    <ul class="actions">
        <li><a href="{{ path('GCore_FSANewHospital') }}#hospital_new" title="Ajouter un nouvel hôpital" class="add"><img src="{{ asset('bundles/gessehcore/images/Add.png') }}" alt="Ajouter" /></a></li>
    </ul>
    <ul class="entities hospitals">
    {% for hospital in hospitals %}
        {% include hospital_id == hospital.id ? 'GessehCoreBundle:FieldSetAdmin:hospitalEdit.html.twig' : 'GessehCoreBundle:FieldSetAdmin:hospitalIndex.html.twig' %}
    {% else %}
        <li class="noentity hospital">Aucun hôpital à afficher</li>
    {% endfor %}
    {% if hospital_form is not empty and hospital_id is empty %}
        {% include 'GessehCoreBundle:FieldSetAdmin:hospitalEdit.html.twig' %}
    {% endif %}
    </ul>
    <ul class="actions">
        <li><a href="{{ path('GCore_FSANewHospital') }}#hospital_new" title="Ajouter un nouvel hôpital" class="add"><img src="{{ asset('bundles/gessehcore/images/Add.png') }}" alt="Ajouter" /></a></li>
    </ul>
    {% if hospital_form is not empty %}{{ form_end(hospital_form) }}{% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/gessehcore/js/addSub.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/gessehcore/js/confirm.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/gessehcore/js/actions.js') }}" type="text/javascript"></script>
{% endblock %}
