<tr>
  <td>{{ hospital.name }}</td>
  <td>{{ hospital.address }}</td>
  <td>{{ hospital.web }}</td>
  <td>{{ hospital.phone }}</td>
  <td rowspan=2 class="actions">
    <ul>
      <li><a href="{{ path('GCore_FSAEditHospitalDescription', { 'id': hospital.id }) }}" title="Modifier la page de description de '{{ hospital.name }}'">Description</a></li>
      <li><a href="{{ path('GCore_FSAEditHospital', { 'id': hospital.id }) }}#hospital_{{ hospital.id }}" title="Modifier l'hôpital '{{ hospital.name }}'">Modifier</a></li>
      <li><a href="{{ path('GCore_FSADeleteHospital', { 'id': hospital.id }) }}" title="Supprimer l'hôpital '{{ hospital.name }}'" class="confirm">Supprimer</a></li>
    </ul>
  </td>
</tr>
<tr>
  <td colspan=4>
    <table>
      <thead>
        <tr>
          <th>Service</th>
          <th>Chef de service</th>
          <th>Catégorie</th>
          {% if kparam('simul_active') == true %}
            <th>Postes</th>
          {% endif %}
          <th></th>
        </th>
      </thead>
      <tbody>
        {% for department in hospital.departments %}
          <tr>
            <td>{{ department.name }}</td>
            <td>{{ department.head }}</td>
            <td>{{ department.sector }}</td>
            {% if kparam('simul_active') == true %}
              <td>{{ department.number }}</td>
            {% endif %}
            <td class="actions">
              <ul>
                <li><a href="{{ path('GCore_FSAEditDepartmentDescription', {'id': department.id}) }}" title="Modifier la description du service '{{ department.name }}'">Description</a></li>
                <li><a href="{{ path('GCore_FSADeleteDepartment', {'id': department.id}) }}" title="Supprimer le service '{{ department.name }}'" class="confirm">Supprimer</a></li>
              </ul>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan=4>Aucun service associé</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </td>
</tr>
