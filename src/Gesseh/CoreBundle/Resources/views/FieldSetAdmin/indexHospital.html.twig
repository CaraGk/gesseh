<tr>
  <td>{{ hospital.name }}</td>
  <td>{{ hospital.address }}</td>
  <td>{{ hospital.web }}</td>
  <td>{{ hospital.phone }}</td>
  <td rowspan=2 class="actions">
    <ul>
      <li><a href="{{ path('GCore_FSAEditHospitalDescription', { 'id': hospital.id }) }}" title="Modifier la page de description de '{{ hospital.name }}'">Description</a></li>
      <li><a href="{{ path('GCore_FSAEditHospital', { 'id': hospital.id }) }}" title="Modifier l'hôpital '{{ hospital.name }}'">Modifier</a></li>
      <li><a href="{{ path('GCore_FSADeleteHospital', { 'id': hospital.id }) }}" title="Supprimer l'hôpital '{{ hospital.name }}'">Supprimer</a></li>
    </ul>
  </td>
</tr>
<tr>
  <td colspan=4>
    <table>
      <thead>
        <tr>
          <th>Service</th>
          <th>Chef de service</th>
          <th>Catégorie</th>
          <th></th>
        </th>
      </thead>
      <tbody>
        {% for department in hospital.departments %}
          <tr>
            <td>{{ department.name }}</td>
            <td>{{ department.head }}</td>
            <td>{{ department.sector }}</td>
            <td class="actions">
              <ul>
                <li><a href="{{ path('GCore_FSAEditDepartmentDescription', {'id': department.id}) }}" title="Modifier la description du service '{{ department.name }}'">Description</a></li>
              </ul>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan=4>Aucun service associé</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </td>
</tr>
