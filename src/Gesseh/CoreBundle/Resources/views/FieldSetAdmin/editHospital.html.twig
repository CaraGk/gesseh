<h2 class="record_title">Modification de {{ hospital.name }}</h2>

<form action="{{ path('GCore_FSAEditHospital', {'id': hospital.id}) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_row(edit_form.name) }}
    {{ form_row(edit_form.address) }}
    {{ form_row(edit_form.web) }}
    {{ form_row(edit_form.phone) }}
    <div>Service Patron Cat√©gorie</div>
    <ul id="gesseh_corebundle_hospitaltype_departments" data-prototype="{{ form_widget(edit_form.departments.get('prototype')) | e }}">
    {% for department in edit_form.departments %}
    <li>
      {{ form_row(department.name) }}
      {{ form_row(department.head) }}
      {{ form_row(department.sector) }}
    </li>
    {% endfor %}
    </ul>
    {{ form_row(edit_form.description) }}
    {{ form_rest(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

{% include "GessehCoreBundle:FieldSetAdmin:hospitalForm.html.twig" %}

<ul class="record_actions">
    <li><a href="{{ path('GCore_FSAIndex') }}">Retour</a></li>
    <li>
        <form action="{{ path('GCore_FSADeleteHospital', { 'id': hospital.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
