<h2 class="record_title">Liste des catégories</h2>

<table class="records_list">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for sector in sectors %}
      <tr>
        <td>{{ sector.name }}</td>
        <td>
          <ul class="record_actions">
            <li><a href="{{ path('GCore_FSAEditSector', { 'id': sector.id }) }}">modifier</a></li>
          </ul>
        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>

<ul class="records_actions">
  <li><a href="{{ path('GCore_FSANewSector') }}">Ajouter</a></li>
</ul>

<h2 class="record_title">Liste des hôpitaux</h2>

<table class="records_list">
  <thead>
    <tr>
      <th>Name</th>
      <th>Adresse</th>
      <th>Site web</th>
      <th>Téléphone</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for hospital in hospitals %}
      <tr>
        <td>{{ hospital.name }}</td>
        <td>{{ hospital.address }}</td>
        <td>{{ hospital.web }}</td>
        <td>{{ hospital.phone }}</td>
        <td>
          <ul class="record_actions">
            <li><a href="{{ path('GCore_FSAEditHospital', { 'id': hospital.id }) }}">modifier</a></li>
          </ul>
        </td>
      </tr>
      <tr>
        <td colspan=4>
          <table>
            <thead>
              <tr>
                <th>Service</th>
                <th>Chef de service</th>
                <th>Catégorie</th>
                <th>Description</th>
              </tr>
            </thead>
            <tbody>
              {% for department in hospital.departments %}
                <tr>
                  <td>{{ department.name }}</td>
                  <td>{{ department.head }}</td>
                  <td>{{ department.sector }}</td>
                  <td>Modifier</td>
                </tr>
              {% else %}
                <tr><td colspan=4>Aucun service associé</td></tr>
              {% endfor %}
            </tbody>
          </table>
        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>

<ul class="records_actions">
  <li><a href="{{ path('GCore_FSANewHospital') }}">Ajouter</a></li>
</ul>

