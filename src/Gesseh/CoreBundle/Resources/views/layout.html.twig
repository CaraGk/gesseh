{% extends '::layout.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block nav %}
  <div class="header">Général</div>
  {{ knp_menu_render('anon') }}
  {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
    {% if is_granted('ROLE_STUDENT') %}
      <div class="header">Étudiant</div>
      {{ knp_menu_render('student') }}
    {% endif %}
    {% if is_granted('ROLE_ADMIN') %}
      <div class="header">Administation</div>
      {{ knp_menu_render('admin', {'currentAsLink': false}) }}
    {% endif %}
  {% endif %}
{% endblock %}

{% block titlecontent %}{% endblock %}

{% block actionscontent %}{% endblock %}

{% block content %}{% endblock %}

{% block javascripts %}{{ parent() }}{% endblock %}
